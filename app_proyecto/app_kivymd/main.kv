#:import C kivy.utils.get_color_from_hex
<IconListItem>
    IconLeftWidget:
        ripple_scale: 0
        icon: root.icon
        theme_text_color: "Custom"
        text_color: app.theme_cls.opposite_bg_darkest

<ButtonCard@MDCard>
    padding: dp(4)
    size_hint: 0.1,0.1
    pos_hint: {"center_x": .5, "center_y": .5}
    md_bg_color: C("#404040")
    line_color:app.theme_cls.primary_color
    ripple_behavior: True

<MisPantallas>:
    MDScreen:
        name:"Home"
        MDBoxLayout:
            orientation:"vertical"
            MDBoxLayout:
                md_bg_color: app.theme_cls.primary_color
                size_hint_y:0.1
                MDIconButton:
                    id:button
                    pos_hint:{"center_y":0.5}
                    size_hint_x:0.1
                    icon: "dots-vertical"
                    theme_text_color:"Custom"
                    text_color: 0,0,0,1
                    on_release:root.menu.open()
                MDLabel:
                    id: toplabel
                    text: "Electrónica del Oeste"
                    font_style:"H5"
                    halign:"center"
                    theme_text_color:"Custom"
                    text_color: 0,0,0,1
                MDWidget:
                    size_hint_x:0.1

            MDLabel:
                id: sublabel
                size_hint_y:0.1
                text: "Bienvenido, seleccione la acción a realizar"
                font_style:"H6"
                halign:"center"
                theme_text_color:"Custom"
                text_color: app.theme_cls.opposite_bg_darkest
            
            GridLayout:
                size_hint_y:0.8
                rows:2
                cols:2
                padding:dp(25)
                spacing:dp(25)            
                ButtonCard:
                    id: buttonadd
                    on_release:root.current="Agregar"
                    MDBoxLayout:
                        orientation:"vertical"
                        padding:0,0,0,15
                        MDLabel:
                            text:"Agregar un artículo"
                            halign:"center"
                            font_style:"H6"
                            theme_text_color:"Custom"
                            text_color: app.theme_cls.opposite_bg_darkest
                            bold:True
                            size_hint_y:0.3
                        MDIcon:
                            icon:"plus-circle"
                            theme_text_color:"Custom"
                            text_color: app.theme_cls.opposite_bg_darkest
                            pos_hint:{"center_x":0.5,"center_y":0.5}
                            font_size: "48sp"
                        
                           
                ButtonCard:
                    id: buttondel
                    on_release:root.current="Eliminar"
                    MDBoxLayout:
                        orientation:"vertical"
                        padding:0,0,0,15
                        MDLabel:
                            text:"Eliminar un artículo"
                            halign:"center"
                            font_style:"H6"
                            theme_text_color:"Custom"
                            text_color: app.theme_cls.opposite_bg_darkest
                            bold:True
                            size_hint_y:0.3
                        MDIcon:
                            icon:"trash-can-outline"
                            theme_text_color:"Custom"
                            text_color: app.theme_cls.opposite_bg_darkest
                            pos_hint:{"center_x":0.5,"center_y":0.5}
                            font_size: "48sp"
                            
                ButtonCard:
                    id: buttonedit
                    on_release:root.current="Modificar"
                    MDBoxLayout:
                        orientation:"vertical"
                        padding:0,0,0,15
                        MDLabel:
                            text:"Modificar un artículo"
                            halign:"center"
                            font_style:"H6"
                            theme_text_color:"Custom"
                            text_color: app.theme_cls.opposite_bg_darkest
                            bold:True
                            size_hint_y:0.3
                        MDIcon:
                            icon:"circle-edit-outline"
                            theme_text_color:"Custom"
                            text_color: app.theme_cls.opposite_bg_darkest
                            pos_hint:{"center_x":0.5,"center_y":0.5}
                            font_size: "48sp"
                            
                ButtonCard:
                    id: buttonsearch
                    MDBoxLayout:
                        orientation:"vertical"
                        padding:0,0,0,15
                        MDLabel:
                            text:"Consultar stock"
                            halign:"center"
                            font_style:"H6"
                            theme_text_color:"Custom"
                            text_color: app.theme_cls.opposite_bg_darkest
                            bold:True
                            size_hint_y:0.3
                        MDIcon:
                            icon:"database-search-outline"
                            theme_text_color:"Custom"
                            text_color: app.theme_cls.opposite_bg_darkest
                            pos_hint:{"center_x":0.5,"center_y":0.5}
                            font_size: "48sp"
    MDScreen:
        name:"Agregar"
        Agregar
    MDScreen:
        name:"Eliminar"
        Eliminar
    MDScreen:
        name:"Modificar"
        Modificar