#:import C kivy.utils.get_color_from_hex
<IconListItem>
    IconLeftWidget:
        ripple_scale: 0
        icon: root.icon
        theme_text_color: "Custom"
        text_color: app.theme_cls.opposite_bg_darkest

<MisPantallas>:
    MDScreen:
        name:"Agregar"
        MDBoxLayout:
            orientation:"vertical"
            MDBoxLayout:
                md_bg_color: app.theme_cls.primary_color
                size_hint_y:0.1
                MDIconButton:
                    id:button
                    pos_hint:{"center_y":0.5}
                    size_hint_x:0.1
                    icon: "dots-vertical"
                    theme_text_color:"Custom"
                    text_color: 0,0,0,1
                    on_release:root.menu.open()
                MDLabel:
                    id: toplabel
                    text: "Nuevo artículo"
                    font_style:"H5"
                    halign:"center"
                    theme_text_color:"Custom"
                    text_color: 0,0,0,1
                MDIconButton:
                    id:buttonhome
                    pos_hint:{"center_y":0.5}
                    size_hint_x:0.1
                    icon: "home"
                    font_size:dp(48)
                    theme_text_color:"Custom"
                    text_color: 0,0,0,1
                    #on_release:root.current="home"

            MDWidget:
                size_hint_y:0.1
                md_bg_color: app.theme_cls.bg_darkest
            
            GridLayout:
                cols: 2
                rows: 4 
                size_hint_y:0.6
                spacing:20
                padding:20

                MDLabel:
                    id: label_nombre
                    text: 'Producto'
                    halign:"center"
                    theme_text_color:"Custom"
                    text_color: 0,0,0,1
                    size_hint_y: .1
                    md_bg_color: app.theme_cls.primary_color
                     
                MDTextField:
                    id: input_nombre
                    hint_text: "Ingrese el nombre del producto"
                    hint_text_color_normal: app.theme_cls.opposite_bg_darkest
                    hint_text_color_focus: app.theme_cls.primary_color
                    text_color_focus: app.theme_cls.opposite_bg_darkest
                    line_color_normal: app.theme_cls.primary_color
                    line_color_focus: app.theme_cls.primary_color
                    mode: "rectangle"
                    size_hint_y:.1

                MDLabel:
                    id: label_cantidad
                    text: 'Cantidad'
                    halign:"center"
                    theme_text_color:"Custom"
                    text_color: 0,0,0,1
                    size_hint_y: .1
                    md_bg_color: app.theme_cls.primary_color
                   
                MDTextField:
                    id: input_cantidad
                    hint_text: "Ingrese un valor numérico"
                    hint_text_color_normal: app.theme_cls.opposite_bg_darkest
                    hint_text_color_focus: app.theme_cls.primary_color
                    text_color_focus: app.theme_cls.opposite_bg_darkest
                    line_color_normal: app.theme_cls.primary_color
                    line_color_focus: app.theme_cls.primary_color
                    mode: "rectangle"
                    size_hint_y:.1

                MDLabel:
                    id: label_precio
                    text: 'Precio'
                    halign:"center"
                    theme_text_color:"Custom"
                    text_color: 0,0,0,1
                    size_hint_y: .1
                    md_bg_color: app.theme_cls.primary_color
                   
                MDTextField:
                    id: input_precio
                    hint_text: "Ingrese un valor numérico"
                    hint_text_color_normal: app.theme_cls.opposite_bg_darkest
                    hint_text_color_focus: app.theme_cls.primary_color
                    text_color_focus: app.theme_cls.opposite_bg_darkest
                    line_color_normal: app.theme_cls.primary_color
                    line_color_focus: app.theme_cls.primary_color
                    mode: "rectangle"
                    size_hint_y:.1

                MDLabel:
                    id: label_descrip
                    text: 'Descripción'
                    halign:"center"
                    theme_text_color:"Custom"
                    text_color: 0,0,0,1
                    size_hint_y: .1
                    md_bg_color: app.theme_cls.primary_color
                  

                MDTextField:
                    id: input_descrip
                    hint_text: "Ingrese una breve descripción"
                    hint_text_color_normal: app.theme_cls.opposite_bg_darkest
                    hint_text_color_focus: app.theme_cls.primary_color
                    text_color_focus: app.theme_cls.opposite_bg_darkest
                    line_color_normal: app.theme_cls.primary_color
                    line_color_focus: app.theme_cls.primary_color
                    mode: "rectangle"
                    size_hint_y:.1

            MDWidget:
                size_hint_y:0.1
                md_bg_color: app.theme_cls.bg_darkest
            
            MDFloatLayout:
                size_hint_y:0.1
                MDRoundFlatIconButton:
                    text: "Guardar artículo"
                    icon: "content-save"
                    md_bg_color: app.theme_cls.primary_color
                    text_color: 0,0,0,1
                    theme_icon_color: "Custom"
                    icon_color: 0,0,0,1
                    line_width:dp(1.5)
                    pos_hint:{"center_x":0.5,"center_y":0.5}
               